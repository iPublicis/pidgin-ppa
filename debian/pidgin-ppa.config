#!/bin/sh -e
# vim: ai ts=4 sts=4 et sw=4

. /usr/share/debconf/confmodule

# This has to match the similar code in pidgin-ppa.postinst.
. /etc/lsb-release
case $DISTRIB_ID in
    Ubuntu)
        # Supported
        exit 0
        ;;
    LinuxMint)
        case $DISTRIB_RELEASE in
            11)
                exit 0
                ;;
            10)
                exit 0
                ;;
            [5789])
                exit 0
                ;;
            *)
                NOTE=unsupported_distro_version
                ;;
        esac
        ;;
    *)
        NOTE=unsupported_distro
        ;;
esac

db_subst pidgin-ppa/$NOTE DISTRIB_ID "$DISTRIB_ID"
db_subst pidgin-ppa/$NOTE DISTRIB_RELEASE "$DISTRIB_RELEASE"
db_fset pidgin-ppa/$NOTE seen false
db_input high pidgin-ppa/$NOTE || true
db_go
